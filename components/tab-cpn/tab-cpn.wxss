/* components/tab-cpn/tab-cpn.wxss */
.tab-class {
  display: flex;
}

.tab-item {
  flex: 1;
  text-align: center;
}

.active {
  color: red;
}

.active text {
  padding: 10rpx;
  border-bottom: 5rpx solid red;
}

.itemstyle-view {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  flex-wrap: wrap;
}

.itemstyle-view view {
  margin-top: 30rpx;
}

.itemstyle-view image {
  width: 100%;
}

.itemstyle-view text {
  width: 360rpx;
  font-size: 22rpx;
  color: #666;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
}

.itemstyle-view .money {
  color: red;
}